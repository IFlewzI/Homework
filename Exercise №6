using System;

namespace MyApp
{
    class Program
    {
        static void Main()
        {
            int picturesNumber = 52;
            int rowSize = 3;
            int rowNumber = 52 / 3;
            int picturesLeft = picturesNumber % rowNumber;
            Console.WriteLine("Рядов с картинками: {0} \nОсталось картинок: {1}", rowNumber, picturesLeft);
            }
        }
    }
}
